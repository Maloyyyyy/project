@model List<JonyBalls3.Models.PortfolioItem>
@{
    ViewData["Title"] = "Управление портфолио";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold" style="color: #667eea;">
                <i class="fas fa-images me-2"></i>Мое портфолио
            </h1>
            <p class="lead text-muted">Управляйте фотографиями ваших работ</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h5 class="mb-3"><i class="fas fa-upload me-2" style="color: #667eea;"></i>Загрузить новую работу</h5>
                    
                    <form asp-action="UploadPortfolio" method="post" enctype="multipart/form-data" id="uploadForm">
                        <div class="mb-3">
                            <label class="form-label">Название работы</label>
                            <input type="text" name="title" class="form-control" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Описание</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Фотография</label>
                            <input type="file" name="file" class="form-control" accept="image/*" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Дата завершения</label>
                            <input type="date" name="completedDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                        </div>
                        
                        <button type="submit" class="btn btn-gradient w-100">
                            <i class="fas fa-cloud-upload-alt me-2"></i>Загрузить
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="mb-0"><i class="fas fa-image me-2" style="color: #667eea;"></i>Мои работы</h5>
                </div>
                <div class="card-body p-4">
                    @if (!Model.Any())
                    {
                        <p class="text-muted text-center mb-0">Портфолио пусто. Загрузите фотографии ваших работ.</p>
                    }
                    else
                    {
                        <div class="row g-4">
                            @foreach (var item in Model.OrderByDescending(x => x.UploadedAt))
                            {
                                <div class="col-md-6">
                                    <div class="card portfolio-item">
                                        <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Title">
                                        <div class="card-body">
                                            <h6 class="card-title">@item.Title</h6>
                                            <p class="small text-muted">@item.Description</p>
                                            <p class="small text-muted mb-2">
                                                <i class="fas fa-calendar me-1"></i>@item.CompletedDate.ToString("dd.MM.yyyy")
                                            </p>
                                            <button class="btn btn-sm btn-outline-danger delete-portfolio" data-id="@item.Id">
                                                <i class="fas fa-trash me-1"></i>Удалить
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .portfolio-item {
        transition: transform 0.3s;
    }
    
    .portfolio-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.delete-portfolio').click(function() {
                const button = $(this);
                const id = button.data('id');
                
                if (confirm('Удалить эту работу из портфолио?')) {
                    $.post('/Contractors/DeletePortfolio/' + id, {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    })
                    .done(function(response) {
                        if (response.success) {
                            toastr.success('Работа удалена');
                            button.closest('.col-md-6').fadeOut(300, function() { $(this).remove(); });
                        } else {
                            toastr.error('Ошибка при удалении');
                        }
                    })
                    .fail(function() {
                        toastr.error('Ошибка сервера');
                    });
                }
            });
        });
    </script>
}