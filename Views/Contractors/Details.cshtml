@model JonyBalls3.Models.SimpleContractor

@{
    ViewData["Title"] = "Детали подрядчика";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        
        <div class="row">
            <div class="col-md-6">
                <p><strong>Специализация:</strong> @Model.Specialization</p>
                <p><strong>Опыт работы:</strong> @Model.ExperienceYears лет</p>
                <p><strong>Рейтинг:</strong> 
                    <span class="text-warning">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < Math.Floor(Model.Rating))
                            {
                                <span>★</span>
                            }
                            else
                            {
                                <span>☆</span>
                            }
                        }
                    </span> (@Model.Rating/5)
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Телефон:</strong> @Model.Phone</p>
                <p><strong>Цена за час:</strong> @Model.PricePerHour.ToString("N0") руб.</p>
            </div>
        </div>
        
        <div class="mt-4">
            <h5>Связаться с подрядчиком:</h5>
            <a href="tel:@Model.Phone" class="btn btn-success me-2">
                <i class="fas fa-phone"></i> Позвонить
            </a>
            <a href="mailto:contractor@example.com" class="btn btn-primary me-2">
                <i class="fas fa-envelope"></i> Написать
            </a>
            <a asp-controller="Projects" asp-action="Create" class="btn btn-warning">
                <i class="fas fa-plus"></i> Создать проект с этим подрядчиком
            </a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к каталогу</a>
</div>
