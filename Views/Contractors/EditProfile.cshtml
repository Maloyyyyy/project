@model JonyBalls3.Models.ContractorProfile
@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h2 class="text-center fw-bold" style="color: #667eea;">
                        <i class="fas fa-edit me-2"></i>Редактирование профиля
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label fw-bold"></label>
                            <input asp-for="CompanyName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialization" class="form-label fw-bold"></label>
                            <input asp-for="Specialization" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ExperienceYears" class="form-label fw-bold"></label>
                                <input asp-for="ExperienceYears" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="HourlyRate" class="form-label fw-bold"></label>
                                <input asp-for="HourlyRate" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold"></label>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Website" class="form-label fw-bold"></label>
                                <input asp-for="Website" class="form-control" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-gradient">Сохранить изменения</button>
                            <a asp-action="MyProfile" class="btn btn-outline-gradient">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>