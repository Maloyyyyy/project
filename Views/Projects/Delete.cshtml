@model JonyBalls3.Models.SimpleProject

@{
    ViewData["Title"] = "Удаление проекта";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить этот проект?</h3>
<div>
    <h4>Проект</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Площадь</dt>
        <dd class="col-sm-10">@Model.Area м²</dd>
        
        <dt class="col-sm-2">Бюджет</dt>
        <dd class="col-sm-10">@Model.Budget.ToString("N0") руб.</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
    </form>
</div>
